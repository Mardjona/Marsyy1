<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Marsyy1.MainWindow"
		x:CompileBindings="False"
        Title="Marsyy1">
	<Grid >
	 <Border >
	   <ListBox
			Margin="10"
			DockPanel.Dock="Top"
			Name="ClientListBox"	>
		  <ListBox.ItemTemplate>
			<DataTemplate >
				<Border BorderThickness="1"
						BorderBrush="Black">
					<StackPanel Spacing="20"  Orientation="Horizontal"  >
						<Grid  ColumnDefinitions="*,*,*,*,*,*,*,*,*" ShowGridLines="False">
						<TextBlock Width="150" Margin="2" Grid.Column="0" Text="{Binding Firstname}"/>
						<TextBlock Width="150" Margin="2" Grid.Column="1" Text="{Binding Lastname}"/>
						<TextBlock Width="150" Margin="2" Grid.Column="2" Text="{Binding Patronymic}"/>
						<TextBlock Width="50"  Margin="2" Grid.Column="3" Text="{Binding Gender}"/>
						<TextBlock Width="100" Margin="2" Grid.Column="4" Text="{Binding Birthday}"/>
						<TextBlock Width="190" Margin="2" Grid.Column="5" Text="{Binding Email}"/>
						<TextBlock Width="250" Margin="2" Grid.Column="6" Text="{Binding Phone}"/>
						<TextBlock Width="150" Margin="2" Grid.Column="7" Text="{Binding Dataofvisit}"/>
						<TextBlock Width="150" Margin="2" Grid.Column="8" Text="{Binding Countofvisit}"/>
						<TextBlock Width="150" Margin="2" Grid.Column="9" Text="{Binding Photopath}"/>
						</Grid>
					 </StackPanel>
				</Border>
			</DataTemplate>
		 </ListBox.ItemTemplate>
	   </ListBox>
	  </Border>
	</Grid>
	
</Window>
